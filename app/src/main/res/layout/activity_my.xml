    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/me_title_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/me_bg_pic"
        android:paddingBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/default_me_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="80dp"
            android:src="@mipmap/default_avatar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/me_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="HI,张三"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/default_me_iv"
            app:layout_constraintTop_toTopOf="@id/default_me_iv" />

        <TextView
            android:id="@+id/personal_information_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息描述"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/me_name_tv"
            app:layout_constraintRight_toRightOf="@id/me_name_tv"
            app:layout_constraintTop_toBottomOf="@id/me_name_tv" />

