<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.example.takeataxiproject.util.view.ClearEditText
        android:id="@+id/et_login_phone"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:drawablePadding="16dp"
        android:hint="请输入手机号"
        android:imeOptions="actionNext"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/gray"
        android:textSize="18sp" />

    <com.example.takeataxiproject.util.view.ClearEditText
        android:id="@+id/et_login_pwd"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawablePadding="16dp"
        android:hint="请输入密码"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:textColor="@color/dark_gray"
        android:textColorHint="@color/gray"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_switch_login"
            android:drawablePadding="8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="司机登录" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_login_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="注册"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape_rect_round_btn_blue"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>
